
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<%#= @listing.errors.full_messages %>

  <div class="form-inputs">
    <%= f.input :title %>
    <br>
    <%= f.input :description %>
    <br>
    <%= f.label :price %>
    <br>
    <%= f.number_field :price, min: 1 %>
    <br>
    <br>
    <%= f.label :product %>
    <br>
    <%= f.select :product, ["Console", "Game"] %>
    <br>
    <br>
    <%= f.label :condition %>
    <br>
    <%= f.select :condition, ["Excellent", "Good", "Poor"] %>
    <br>
    <br>
    <%# picture field changed from string to multiple image upload %>
    <%= f.label :pictures %>
    <br>
    <%= f.file_field :pictures, multiple: true %>
    <%# removed buyer and seller association from form, moved to listings controller%>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
