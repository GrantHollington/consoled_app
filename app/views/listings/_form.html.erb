
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<%#= @listing.errors.full_messages %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :product %>
    <%= f.input :condition %>
    <%# picture field changed from string to multiple image upload %>
    <%= f.file_field :pictures, multiple: true %>
    <%# removed buyer and seller association from form, moved to listings controller%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
